<script type="text/javascript" src="js/soundmanager2-jsmin.js"></script>
<script type="text/javascript" src="js/mp3-player-button.js"></script>
#set($layout = "/layout/user_detail_layout.vm")
<script>
$(document).ready(function(){
	$("a.choice3").click(function(){
		$("#choice").val($(this).attr("choice"));
		$(this).parent().children(".choice3").each(function(){
			$(this).removeAttr("style");
			$(this).children(".yes").hide();
		});
		$(this).css("border","2px solid #80C122").css("opacity","0.5");
		$(this).children(".yes").show();
	});
	$(".choice3").mouseenter(function(){
		$(this).css("border","2px solid #80C122").css("opacity","0.5");
	}).mouseleave(function(){
		$(this).css("border","2px solid white");
	});
	$(".next").click(function(){
		$("#form_q").submit();
	});
});
</script>
<div class="main-content-container">
	<div class="main-body">
		<div class="question">
			<form id="form_q" method="post">
			<input type="hidden" name="do_submit" value="true"/>
			#springBind("form.questionid")
			<input type="hidden" name="${status.expression}" value="$!{status.value}" id="qid" />
			#springBind("form.choice")
			<input type="hidden" name="${status.expression}" value=0 id="choice"/>
			<div class="q-head clearfix">
				<h1 class="number">
					第9题. 请问图片中的女孩最有可能是哪一种表情？
					<p><img style="width:240px;" src="img/test/lq8T.png" /></p>
					<div class="clock" answer="1">倒计时：<em>30</em></div>
				</h1>
			</div>
			<div class="choice-wrap clearfix">
				<a class="choice3" choice="1">
					<div class="img-wrap-s">
						<em>
							<img src="img/test/lq8-A.jpg" />
						</em>
					</div>
					<p>A</p>
					<img class="yes" src="img/yes.png" />
				</a>
				<a class="choice3" choice="2">
					<div class="img-wrap-s">
						<em>
							<img src="img/test/lq8-B.jpg" />
						</em>
					</div>
					<p>B</p>
					<img class="yes" src="img/yes.png" />
				</a>
				<a class="choice3" choice="3">
					<div class="img-wrap-s">
						<em>
							<img src="img/test/lq8-C.jpg" />
						</em>
					</div>
					<p>C</p>
					<img class="yes" src="img/yes.png" />
				</a>
				<a class="choice3" choice="4">
					<div class="img-wrap-s">
						<em>
							<img src="img/test/lq8-D.jpg" />
						</em>
					</div>
					<p>D</p>
					<img class="yes" src="img/yes.png" />
				</a>
			</div>
			</form>
			<div class="operation clearfix">
    			<a class="next">下一题</a>
    		</div>
		</div>
	</div>
</div>