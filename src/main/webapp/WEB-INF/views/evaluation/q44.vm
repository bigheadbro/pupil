#set($layout = "/layout/user_detail_layout.vm")
<script>
$(document).ready(function(){
    $('input').iCheck({
		checkboxClass: 'icheckbox_square-green',
    	radioClass: 'iradio_square-green',
    	increaseArea: '20%' // optional
    });
    $('input').on('ifChecked', function(event){
		$("#choice").val($(this).attr("id"));
     	$('input').iCheck('disable');
    });
	$('input').on('ifChecked', function(event){
     	$('input').iCheck('disable');
		$("#form_q").submit();
    });
});
</script>
<div class="main-content-container">
	<div class="main-body">
		<div class="question">
			<form id="form_q" method="post">
			<input type="hidden" name="do_submit" value="true"/>
			#springBind("form.questionid")
			<input type="hidden" name="${status.expression}" value="$!{status.value}" id="qid" />
			#springBind("form.choice")
			<input type="hidden" name="${status.expression}" value="$!{status.value}" id="choice"/>
			<div class="q-head clearfix">
				<h1 class="number">
					第44题. 小李在电视上看到一种体育娱乐活动:一个人把自己悬吊在一根很长的橡皮绳下，自由的在空中上下振荡。小李发现,不管这个人运动的幅度如何，他上下一次的时间似乎总是相等。小李想证实这个观察结果的普遍性，有三个人给他提出建议。<br/>
                   <p><span>甲:多问几个人，思考一下大家的意见，再得出结论。<br/>
                                                                    乙:问问科学老师，以老师给的看法为准。<br/>
                                                                    丙: 用一根橡皮绳吊一个沙袋做实验，测量不同幅度的情况下来一回一次所用的时间。<br/>
                                                                   </span></p>
																    如果通过以上三种方法得到的结论存在分歧，你最相信的是哪一种?
					<div class="clock" answer="1">倒计时：<em>90</em></div>
				</h1>
			</div>
			<ul class="single">
				<li>
					<input type="radio" name="iCheck" id="1">
					<label for="1">A、甲</label>
				</li>
				<li>
					<input type="radio" name="iCheck" id="2">
					<label for="2">B、乙</label>
				</li>
				<li>
					<input type="radio" name="iCheck" id="3">
					<label for="3">C、丙</label>
				</li>
			</ul>
			</form>
		</div>
	</div>
</div>