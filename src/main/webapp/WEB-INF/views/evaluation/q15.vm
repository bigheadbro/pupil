#set($layout = "/layout/user_detail_layout.vm")
<script>
$(document).ready(function(){
    $('input').iCheck({
		checkboxClass: 'icheckbox_square-green',
    	radioClass: 'iradio_square-green',
    	increaseArea: '20%' // optional
    });
    $('input').on('ifChecked', function(event){
		$("#choice").val($(this).attr("id"));
     	
    });
	
	$('.fancybox-v').fancybox({
		openEffect : 'elastic',
		closeEffect : 'elastic',
		helpers: {
            overlay: {
              locked: false
            }
          }
	});
	$(".next").click(function(){
		$("#form_q").submit();
	});
});

</script>
<div class="main-content-container">
	<div class="main-body">
		<div class="question">
			<form id="form_q" method="post">
			<input type="hidden" name="do_submit" value="true"/>
			#springBind("form.questionid")
			<input type="hidden" name="${status.expression}" value="$!{status.value}" id="qid" />
			#springBind("form.choice")
			<input type="hidden" name="${status.expression}" value="$!{status.value}" id="choice"/>
			<div class="q-head clearfix">
				<h1 class="number">
					第2题. 现在有四张卡片，每张卡片如果正面写城市的名称,反面就写交通工具的名称;反之,正面写交通工具则反面写城市名称。四张卡片如下图。如果你想证明上海的反面写着火车，请问下面哪种翻卡片的方法可以最快地证明这个想法？
					<p>
						<img style="width:500px;" src="img/test/hd2T.png" />
					</p>
					<div class="clock" answer="1">倒计时：<em>180</em></div>
				</h1>
			</div>
			<ul class="single">
				<li>
					<input type="radio" name="iCheck" id="1">
					<label for="1">A、翻“上海”</label>
				</li>
				<li>
					<input type="radio" name="iCheck" id="2">
					<label for="2">B、翻“北京”和“火车”</label>
				</li>
				<li>
					<input type="radio" name="iCheck" id="3">
					<label for="3">C、翻“上海”和“汽车”</label>
				</li>
				<li>
					<input type="radio" name="iCheck" id="4">
					<label for="4">D、翻“上海”，“火车”和“汽车”</label>
				</li>
			</ul>
			</form>
			<div class="operation clearfix">
    			<a class="next">下一题</a>
    		</div>
		</div>
	</div>
</div>